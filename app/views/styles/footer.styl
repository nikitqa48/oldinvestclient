#footer
  #designation-container
    position absolute
    top 0
    right 14em
    bottom 0
    left 5.5em
  #demo-mode-container
    .demo-mode-btn
      background: url('../images/demo-icon.png') no-repeat center center rgba(25, 27, 31, 0.7)
      color #ffffff
      width 31px
      height 31px
      text-align center
      line-height 31px
      cursor pointer
      float right
      &:active
        background-color: rgba(235, 91, 47, 0.9)
      &.active
        background: url('../images/demo-stop-icon.png') no-repeat center center rgba(25, 27, 31, 0.7)

  #change-locale-container
    text-transform: uppercase

  .natural-resources-btn
    display: inline-block
    padding: 0 1.2em
    color: #fff
    line-height: 2.9em
    cursor: pointer
    background rgba(25,27,31, 0.7)
    font-family: "Helvetica Neue"
    font-weight: 400
    position: absolute;
    bottom: 0px
    right: 72px
    &:active
      background: rgba(235,91,47, 0.9)
    .title
      white-space nowrap
      text-transform: uppercase
      font-size: 12px
      display: inline-block
      padding-top: 2px

#tooltip, #distanceToMoscow, #zoomViews
  display none
  background rgba(25, 27, 31, 0.701961)
  span
    color #fff
    padding 0 1em
    font-size 1.5em
    font-weight 400
    line-height 31px
    white-space nowrap
    vertical-align middle
    font-family "Helvetica Neue"

#zoomViews
  display block
  background none
  .zoomView
    color #fff
    padding 0 .4em
    display inline-block
    cursor pointer
    font-size 1.5em
    font-weight 400
    line-height 31px
    margin-left 5px
    white-space nowrap
    vertical-align middle
    font-family "Helvetica Neue"
    background rgba(25, 27, 31, 0.701961)

    &:first-child
      margin-left 0

#distanceToMoscow
  display none

.footer-item
  float right
  margin-left 5px