#presentation-container
	.presentation-view.climate
		&.opened
			top 19em
			right 0
			left 4px
			width 21.8em
			max-height 100%
			overflow hidden
			padding 0 2.9em 0 1.3em
			border 1px solid #d2d2d2
			background-color #fff

			.layer
				padding 1.5em 0
				position relative
				border none
				cursor pointer
				border-top 1px solid #ddd

				&:first-child
					border-top none

				.title
					font-size 1.4em
					margin-top 0.2em
					color #444

				.checkbox
					border 1px solid #ccc
					width 16px
					height 16px
					float left
					margin-right 1em
					position relative
					overflow hidden
					-webkit-border-radius 8px
					border-radius 8px

				&.checked
					.checkbox
						border-color #ec8063
						background url("../images/tick.png") no-repeat center;

				&:active, &:hover
					.checkbox
						background url("../images/tick-hover.png") no-repeat center
					&.checked
						.checkbox
							border-color #ec8063
							background url("../images/tick.png") no-repeat center !important

				&.checked
					.legend
						clear both
						display block
						img
							width 218px
							padding-top 1em
							padding-bottom 1em

.legend
	display none

.leaflet-control-container
	.leaflet-control-layers.leaflet-control
		.leaflet-control-layers-toggle
			background-image url(/images/layers.png)