@import "nib"

$count = 3
$arr = 0...$count

#main-menu
  position: fixed
  z-index: 2
  width 570px
  height 425px
  top 50%
  left 50%
  margin-left -284.5px
  margin-top -212.5px
  transition: top 0.5s linear, left 0.5s linear, width 0.5s linear, height 0.5s linear, margin 0.5s linear
  .logo-container
    display: block
    text-decoration: none
    height 300px
    width 100%
    background url("../images/logo-bg.png") no-repeat center
    position relative
    transition height 0.5s linear
    > .logo
      text-align center
      padding-top 30px
    > .region
      font-family: "Helvetica Neue"
      font-weight 400
      text-align center
      margin-top 14px
      .project-type
        font-size 20px
        color #e1572d
      .name
        font-size 35px
        color #fff
  > .main-menu-item
    display inline-block
    vertical-align top
    width: 33.33%
    border-left 1px solid #E5E5E5
    box-sizing border-box
    &[index="0"]
      border-left none
    > a
      position: relative
      display block
      width 100%
      height 125px
      background #fff
      text-align center
      text-decoration none
      &:active
        background #e1582e
        > .title
          color #fff
        > .icon-wrap
          > .icon
            background-position center bottom
      > .title
        color #444
        font-size 16px
        font-family: "Helvetica Neue"
        font-weight 400
      > .icon-wrap
        height 75px
        padding-top 15px
        > .icon
          display inline-block
          background-repeat no-repeat
          background-position center top
          vertical-align top
          &.projects
            width 64px
            height 71px
            background-image url("../images/project-icon-sprite.png")
          &.platforms
            width 65px
            height 66px
            background-image url("../images/platform-icon-sprite.png")
          &.region
            width 48px
            height 72px
            background-image url("../images/region-icon-sprite.png")
  &.minimize
    top 4px
    margin 0
    left 4px
    width 261px
    height 132px
    .logo-container
      height 67px
      .logo
        text-align: left
        padding-left: 8px
        padding-top: 7px
        display: inline-block
        img
          width 42px
      > .region
        font-family: "Helvetica Neue"
        font-weight: 400
        text-align: left
        margin-top: 17px
        display: inline-block
        vertical-align: top
        margin-left: 14px
        .project-type
          font-size 16px
        .name
          font-size 19px
          color #fff
    > .main-menu-item
      > a
        height 65px
        > .title
          font-size 12px
        .icon-wrap
          padding-top 5px
          height 35px
          overflow: hidden
          .icon
            background-size 50%
            &.projects
              height 35px
            &.platforms
              height 31px
            &.region
              height 35px
#main-menu
  for num in $arr
    &[index={"'" + num + "'"}]
      .main-menu-item
        &[index={"'" + num + "'"}]
          > a
            background #e1582e
            > .title
              color #fff
            > .icon-wrap
              > .icon
                background-position center bottom
            > .menu-triangle
              border-color: #E1582E transparent transparent transparent
              border-width: 0.6em 0.6em 0 0.6em
              bottom: -0.6em









