@import "nib"

.boolean-filter
  padding 1em 0
  border none
  cursor pointer

  .title
    font-size: 1.4em
    margin-top: 0.2em
    color: #444444

  .checkbox
    border: 1px solid #cccccc
    width: 16px
    height: 16px
    float: left
    margin-right: 1em
    position: relative
    overflow: hidden
    border-radius 8px
    
    img
      display: none
      position: absolute
      top: 50%
      left: 50%
      margin-top: -3px
      margin-left: -4px

    &.checked
      border-color: #ec8063
      background: url("../images/tick.png") no-repeat center
      img.checked
        display: block

  &:active, &:hover
    .checkbox
      background: url("../images/tick-hover.png") no-repeat center
      &.checked
        border-color: #ec8063
        background: url("../images/tick.png") no-repeat center !important

.filters
  .filter.boolean-filter
    &:first-child
      padding-top 1.5em