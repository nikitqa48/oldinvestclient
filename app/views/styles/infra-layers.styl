@import 'nib'

#info-layers
  top: 41px
  right -32em
  bottom 10em
  z-index 3
  position absolute
  overflow hidden
  transition right .1s linear
  background: rgba(0, 0, 0, 0.7)
  max-height 624px
  &.opened
    right 5px
    .info-layers-btn
      background #fff
      border-color #fff
      .title
        color #444444
      i
        background-position top center

  .infrastructural-layers-container
    ul.infrastructural-layers
      width 30.9em
      padding 0
      color #fff
      li
        cursor pointer
        border-bottom 1px solid rgba(255, 255, 255, 0.15)
        text-align right
        &:first-child
          .icon
            .stripe
              display none
        &[data-value="GasPipeline"]
          .icon
            img
              height 33px
        &.selected
          background #fff
          color #444
          border-bottom 1px solid #DFDFDF
        >.title
          font-size 14px
          line-height 38px
          display inline-block
          text-align right
          padding-right 1em
        .icon
          position relative
          display inline-block
          float right
          height 38px
          line-height 36px
          width 43px
          text-align center
          img
            width 23px
            height 23px
            vertical-align middle

  .iScrollVerticalScrollbar
    top 4px !important
    bottom 4px !important
    left 4px !important