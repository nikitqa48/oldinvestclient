@import 'nib'

#natural-resources
  &.opened
    .natural-resources-container
      right: 5px
    .natural-resources-btn
      background #fff
      border-color #fff
      .title
        color #444444
      i
        background-position top center

  .natural-resources-container
    right -32em
    bottom: 41px
    z-index 3
    position fixed
    overflow hidden
    transition right .1s linear
    background: rgba(0, 0, 0, 0.7)
    max-height: 273px
    top 40px

    ul.natural-resources
      right 0
      width 30.9em
      top 5.5em
      padding 0
      color #fff
      li
        cursor pointer
        border-bottom 1px solid rgba(255, 255, 255, 0.15)
        text-align right
        &.selected
          background: #FFF
          color: #444
          border-bottom 1px solid #DFDFDF
        >.title
          font-size 14px
          line-height 38px
          display inline-block
          text-align right
          padding-right 1em

        .icon
          position relative
          display inline-block
          float right
          height 3.8em
          width 4.3em
          line-height 36px
          text-align center

          .circle
            width 2.4em
            height 2.4em
            margin .7em 1.1em
            background #E78460
            border-radius 1.2em
            -webkit-border-radius 1.2em
            img
              max-height 24px

    .iScrollVerticalScrollbar
      top 4px !important
      bottom 4px !important
      left 4px !important